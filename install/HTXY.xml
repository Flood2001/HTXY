<project>
    <shortName>HTXY</shortName>
    <fullName>${ProductNameFull}</fullName>
    <version>${VersionNumber}</version>
    <installerFilename>${product_shortname}--${platform_name}-installer.${platform_exec_suffix}</installerFilename>
    <leftImage>${Rpath}/HTXY/trunk/install/insLeft.png</leftImage>
    <logoImage>${Rpath}/HTXY/trunk/install/title.png</logoImage>
    <splashImage>${Rpath}/HTXY/trunk/install/splash.png</splashImage>
    <defaultLanguage>zh_CN</defaultLanguage>
    <componentList>
        <component>
            <name>主程序</name>
            <description>主程序</description>
            <canBeEdited>0</canBeEdited>
            <detailedDescription>HTXY的主程序。可作为简易运维主站端，对二次运维装置进行管理，包含离线报文文件分析功能。</detailedDescription>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}/</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>${Rpath}/HTXY/trunk/image</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>${Rpath}/HTXY/trunk/gtkrc</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>${Rpath}/HTXY/trunk/data</origin>
                        </distributionDirectory>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>programfileswindows</description>
                    <destination>${installdir}/</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>${Rpath}/HTXY/trunk/src/UsbChange.ico</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>${Rpath}/HTXY/trunk/bin/HTXY.exe</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <allowWildcards>1</allowWildcards>
                            <includeFiles>*dll</includeFiles>
                            <origin>${Rpath}/hrlib/data/gtk_win32_dll/*</origin>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>E:\gtk\dev\bin\libdb60.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>E:\gtk\dev\bin\libsoup.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>E:\gtk\dev\bin\jansson.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>${Rpath}/hrlib\win32\bin\hrutil.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>${Rpath}/hrlib\win32\bin\hrjson.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>${Rpath}/hrlib\win32\bin\gtkutil.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>${Rpath}/hrlib\win32\bin\hrdraw.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>${Rpath}/hrlib\win32\bin\hrsvg.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>${Rpath}/hrlib\win32\bin\hrxml.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>${Rpath}/hrlib\win32\bin\msvcp100.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>${Rpath}/hrlib\win32\bin\msvcr100.dll</origin>
                        </distributionFile>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment></comment>
                            <exec>${installdir}/HTXY</exec>
                            <icon></icon>
                            <name></name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/HTXY.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath></windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>image</description>
                    <destination>${installdir}/image</destination>
                    <name>image</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>${Rpath}/HTXY/trunk/install/insLeft.png</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>${Rpath}/HTXY/trunk/install/HTXY.png</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>${Rpath}/HTXY/trunk/install/title.png</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>${Rpath}/HTXY/trunk/install/splash.png</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
        <component>
            <name>桌面快捷方式</name>
            <description>添加桌面快捷方式</description>
            <canBeEdited>1</canBeEdited>
            <detailedDescription>在桌面上创建HTXY的快捷方式，如不安装此项，可在安装目录下运行nm3000app来执行程序。linux环境下运行shellpro。</detailedDescription>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList>
                <shortcut>
                    <comment></comment>
                    <exec>${installdir}/HTXY</exec>
                    <icon>${installdir}/image/HTXY.png</icon>
                    <name>HTXY</name>
                    <path>${installdir}/bin</path>
                    <platforms>all</platforms>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/HTXY.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/UsbChange.ico</windowsIcon>
                    <windowsPath></windowsPath>
                </shortcut>
            </desktopShortcutList>
        </component>
        <component>
            <name>开始菜单</name>
            <description>开始菜单</description>
            <canBeEdited>1</canBeEdited>
            <detailedDescription>在开始菜单创建HTXY的程序组和卸载菜单，如不安装此项，可在安装目录下运行uninstall进行卸载。</detailedDescription>
            <selected>1</selected>
            <show>0</show>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment></comment>
                    <name>HTXY</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/HTXY.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/UsbChange.ico</windowsIcon>
                    <windowsPath></windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <allowComponentSelection>1</allowComponentSelection>
    <enableRollback>0</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <licenseFileEncoding>utf-8</licenseFileEncoding>
    <outputDirectory>${Rpath}/HTXY/trunk/bin</outputDirectory>
    <readmeFileEncoding>utf-8</readmeFileEncoding>
    <vendor>${VendorName}</vendor>
    <parameterList>
        <stringParameter name="Rpath" value="E:\IEC61850\Code" ask="0">
            <description></description>
            <explanation></explanation>
            <default></default>
            <allowEmptyValue>1</allowEmptyValue>
            <width>30</width>
        </stringParameter>
        <stringParameter name="VendorName" value="HrSoft" ask="0">
            <description>公司名称</description>
        </stringParameter>
        <stringParameter name="ProductDesc" value="二次运维监管系统" ask="0">
            <description>产品全名</description>
        </stringParameter>
        <stringParameter name="ProductNameShort" value="HTXY" ask="0">
            <description>产品编号名</description>
        </stringParameter>
        <stringParameter name="ProductNameFull" value="HTXY" ask="0">
            <description>产品编号名</description>
        </stringParameter>
        <stringParameter name="VersionNumber" value="1.0.2" ask="0">
            <description>版本</description>
        </stringParameter>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_shortname}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>30</width>
        </directoryParameter>
    </parameterList>
    <platformOptionsList>
        <platformOptions>
            <platform>linux</platform>
        </platformOptions>
    </platformOptionsList>
</project>

